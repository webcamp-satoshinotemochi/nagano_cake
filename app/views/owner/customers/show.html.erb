<div class="container">
  <div class="row">
    <div class="col m-10">
      <h2><%= @customer.full_name %>さんの会員詳細</h2>
      <table class="table table-light">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.family_name %>&nbsp;&nbsp;<%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.family_name_kana %>&nbsp;&nbsp;<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td>〒<%= @customer.post_address %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <% if @customer.is_deleted? == true %>
    	        <td class="text-secondary">退会</td>
				    <% else %>
				      <td class="text-success">有効</td>
				    <% end %>
          </tr>
        </tbody>
      </table>
      <div class="text-center mb-3">
      <div class="d-inline-block mr-5">
        <%= link_to '編集する', edit_owner_customer_path, class:"btn btn-success" %>
      </div>
      <div class="d-inline-block ml-5">
        <%= link_to '会員一覧に戻る', owner_customers_path, class:"btn btn-primary" %>
      </div>
      </div>
    </div>
  </div>
</div>