<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員情報編集</h2>
      <%= form_with model: @customer, url: customers_path, local: true do |f| %>
      <tabel class="table table-borderless">
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :family_name %> <%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :family_name_kana %> <%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :post_address %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit "編集内容を保存", class:"btn btn-primary" %>
            <%= link_to "退会する", unsubscribe_customers_path, class:"btn btn-danger" %>
          </td>
        </tr>
      </tabel>
      <% end %>
    </div>
  </div>
</div>