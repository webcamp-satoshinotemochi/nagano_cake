<div class="container px-5 px-sm-0">
  <h1>"<%= @word %>"での検索結果</h1>
  <% if @items.count == 0 %>
    <h2>検索結果がありませんでした</h2>
  <% else %>
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-eq-height">
        <% @items.each do |item| %>
        <div class="col">
          <div class="card mx-auto mt-4">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, size:"200x200", class:"card-img-top", fallback:"no-img.png" %>
            <% end %>
            <div class="card-body">
              <div class="card-title">
                <%= link_to item.name, item_path(item), class:"text-dark" %>
              </div>
              <div class="card-text">
                <%= "¥"+(item.with_tax_price).to_s(:delmited) %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>