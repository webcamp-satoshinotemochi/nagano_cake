<div class="container">
 <div class="row">
  <div class="col m-3">
    <h2>注文履歴一覧</h2><br>
    <table class= "table">
      <thead>
        <tr>
          <th scope="col">購入日時</th>
          <th scope="col">購入者</th>
          <th scope="col">注文個数</th>
          <th scope="col">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th><%= link_to owner_order_path(order) do %>
          <%= order.created_at.strftime("%Y/%m/%d") %>
          <% end %>
          </th>
          <th><%= order.customer.full_name %></th>
          <th><%= order.order_items.sum(:order_quantity) %></th>
    	    <th><%= order.order_status_i18n %></th>
    	  <th></th>
    	 </tr>
    	 <% end %>
      </tbody>
    </table>
  </div>
 </div>
</div>
<%= paginate @orders %>