<h2>管理者ログイン</h2>

<%= form_with model: @owner, url: owner_session_path do |f| %>
  <table class="table table-borderless">
    <tbody>
      <tr>
        <th>メールアドレス</th>
        <td>
          <div class="field">
            <%= f.email_field :email, autofocus: true, size: 50, autocomplete: "email" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>パスワード</th>
        <td>
          <div class="field">
            <%= f.password_field :password, size: 50, autocomplete: "current-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-sm btn-info" %>
            <label><% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            </label>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>