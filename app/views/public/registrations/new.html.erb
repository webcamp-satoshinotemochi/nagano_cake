<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table class="table table-borderless">
    <tbody>
      <tr>
        <div class="field">
          <th>名前</th>
          <td>
            <%= f.label "(姓)" %>
            <!--%= f.text_field :name, autofocus: true, class: "name" %>-->
          </td>
          <td>
            <%= f.label "(名)" %>
            <!--%= f.text_field :name, autofocus: true, class: "name" %>-->
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>フリガナ</th>
          <td>
            <%= f.label "(セイ)" %>
            <!--%= f.text_field :name, autofocus: true, class: "name" %>-->
          </td>
          <td>
            <%= f.label "(メイ)" %>
            <!--%= f.text_field :name, autofocus: true, class: "name" %>-->
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>メールアドレス</th>
          <td>
            <%= f.email_field :email, size: 50, autofocus: true, autocomplete: "email" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>郵便番号(ハイフンなし)</th>
          <td>
            <!--%= f.email_field :email, autofocus: true, autocomplete: "email" %>-->
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>住所</th>
          <td>
            <!--%= f.email_field :email, autofocus: true, autocomplete: "email" %>-->
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>電話番号(ハイフンなし)</th>
          <td>
            <!--%= f.email_field :email, autofocus: true, autocomplete: "email" %>-->
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>パスワード(6文字以上)</th>
          <td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th>パスワード(確認用)<</th>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </div>
      </tr>
      <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-lg btn-success" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<t5>既に登録済みの方</t5>
<%= render "public/shared/links" %>からログインしてください。
