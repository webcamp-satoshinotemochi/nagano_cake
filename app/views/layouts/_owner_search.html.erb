<div class='container my-1 search'>
  <div class='text-right'>
    <%= form_tag(owner_search_path, method: :get) do %>
      <%= text_field_tag (:word) %>
      <%= select_tag 'range', options_for_select([['選択してください', ''],['顧客', '1'],['商品', '2']]) %>
      <%= select_tag 'search', options_for_select([["前方一致","forward"],["部分一致","partial"]]) %>
      <%= submit_tag "検索" %>
    <% end %>
  </div>
</div>