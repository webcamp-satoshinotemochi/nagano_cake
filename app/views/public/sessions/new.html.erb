<h2 class="text-white">ログイン</h2>

<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
  <table class="table table-borderless table-dark" style="opacity: 0.8;">
    <tbody>
      <tr>
        <th>メールアドレス</th>
        <td>
          <div class="field">
            <%= f.email_field :email, autofocus: true, size: 50, autocomplete: "email" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>パスワード</th>
        <td>
          <div class="field">
            <%= f.password_field :password, size: 50, autocomplete: "current-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-sm btn-outline-info" %>
            <label><% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            </label>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
<h5 class="text-center">会員登録がお済ではない方は</h5>
<p class="text-center"><%= render "public/shared/links" %>から新規登録を行ってください</p>
