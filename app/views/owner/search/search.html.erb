<div class="container px-5 px-sm-0">
<% if @range == '1' %>
  <h1>"<%= @word %>"での検索結果</h1>
  <% if @customers.count == 0 %>
    <h2>検索結果がありませんでした</h2>
  <% else %>
    <table class= "table">
      <thead class="thead-light">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr class="text-center">
          <th scope="low"><%= customer.id %></th>
          <th scope="low"><%= link_to customer.full_name, owner_customer_path(customer), :style=>"color:#212529;;" %></th>
          <th scope="low"><%= customer.email %></th>
    	     <% if customer.is_deleted? == true %>
    	       <td class="text-secondary">退会</td>
				   <% else %>
				     <td class="text-success">有効</td>
				   <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% else %>
  <h1>"<%= @word %>"での検索結果</h1>
  <% if @items.count == 0 %>
    <h2>検索結果がありませんでした</h2>
  <% else %>
    <table class= "table">
      <thead>
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th></th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <th scope="low"><%= item.id %></th>
          <th scope="low"><%= link_to item.name, owner_item_path(item) %></th>
          <th scope="low"><%= item.price_before_tax.to_s(:delimited) %></th>
    	    <th scope="low"><%= item.genre.name %></th>
    	    <th></th>
    	    <th scope="low">
    	     <% if item.is_active? == true %>
					  <span class="badge" style="background:#8BCE9A">販売中</span>
				   <% else %>
					  <span class="badge" style="background:#D52438">販売停止中</span>
				   <% end %>
				  </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
</div>