<div class="container">
  <div class="row">
    <div class="col">
      <h2>マイページ</h2>
        <div class="col d-flex aligin-items-center p-3">
          <h4>登録情報</h4>
          <%= link_to "編集", mypage_edit_customers_path, class:"btn btn-outline-dark ml-3" %>
        </div>
        <table class="table table-bordered">
          <tr>
            <td>氏名</td>
            <td><%= @customer.family_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.post_address %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
          <div class="col d-flex aligin-items-center">
            <h4 class="mt-1">配送先</h4>
            <%= link_to "一覧を見る", customers_deliveries_path, class:"btn btn-outline-info ml-5 mb-3 " %>
          </div>
          <div class="col d-flex aligin-items-center">
            <h4>注文履歴</h4>
            <%= link_to "一覧を見る", orders_path, class:"btn btn-outline-info ml-4 mb-3" %>
          </div>
    </div>
  </div>
</div>