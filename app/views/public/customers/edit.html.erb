<div class="container">
  <div class="mb-3 row">
    <div class="col">
      <h2>会員情報編集</h2>
      <%= form_with model: @customer, url: mypage_update_customers_path, local: true do |f| %>
        <div class="row g-3 align-items-center mt-4">
          <div class="col-auto">
            <label for="inputPassword6" class="col-form-label">氏名</label>
          </div>
          <div class="col-auto">
            <%= f.text_field :family_name %> <%= f.text_field :first_name %>
          </div>
        </div>

         <div class="row g-3 align-items-center">
          <div class="col-auto">
            <label for="inputPassword6" class="col-form-label">フリガナ</label>
          </div>
          <div class="col-auto">
            <%= f.text_field :family_name_kana %> <%= f.text_field :first_name_kana %>
          </div>
        </div>

        <div class="row g-3 align-items-center">
          <div class="col-auto">
            <label for="inputPassword6" class="col-form-label">郵便番号</label>
          </div>
          <div class="col-auto">
            <%= f.text_field :post_address %>
          </div>
        </div>

         <div class="row g-3 align-items-center">
          <div class="col-auto">
            <label for="inputPassword6" class="col-form-label">住所</label>
          </div>
          <div class="col-auto">
            <%= f.text_field :address %>
          </div>
        </div>

        <div class="row g-3 align-items-center">
          <div class="col-auto">
            <label for="inputPassword6" class="col-form-label">電話番号</label>
          </div>
          <div class="col-auto">
            <%= f.text_field :phone_number %>
          </div>
        </div>

        <div class="row g-3 align-items-center">
          <div class="col-auto">
            <label for="inputPassword6" class="col-form-label">メールアドレス</label>
          </div>
          <div class="col-auto">
            <%= f.text_field :email %>
          </div>
        </div>
        <tr>
         <div class="mt-3">
            <%= f.submit "編集内容を保存", class:"btn btn-outline-dark" %>
            <%= link_to "退会する", unsubscribe_customers_path, class:"btn btn-outline-danger" %>
         </div>
      <% end %>
    </div>
  </div>
</div>
