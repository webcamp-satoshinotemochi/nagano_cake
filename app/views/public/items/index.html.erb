<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-2">
            <%= render "genre", genre: @genres %>
        </div>
        <div class="col-10">
            <h2 class="text-white">商品一覧<span class="h4">（全 <%= @total_items.count %>件）</span></h2>
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-eq-height">
                    <% @items.each do |item| %>
                      <div class="col">
                        <div class="card mx-auto mt-4 bg-dark text-white">
                            <%= link_to item_path(item) do %>
                                <%= attachment_image_tag item, :image, size:"200x200", class:"card-img-top", fallback:"no-img.png" %>
                            <% end %>
                            <div class="card-body">
                                <div class="card-title">
                                    <%= link_to item.name, item_path(item), class:"text-white" %>
                                </div>
                                <div class="card-text">
                                    <%= (item.with_tax_price).to_s(:delmited) + "円" %>
                                </div>
                            </div>
                        </div>
                      </div>
                    <% end %>
                </div>
            </div>
            <div class="d-flex pagenation justify-content-center mt-5 mb-3">
                <%= paginate @items %>
            </div>
        </div>
    </div>
</div>