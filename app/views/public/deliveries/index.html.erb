<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3>配送先登録  / 一覧</h3>
      <div class="mt-5">
        <%= form_with model: @delivery, url: customers_deliveries_path, local:true do |f| %>
          <table>
            <tr>
              <td>郵便番号（ハイフンなし）</td>
              <td><%= f.text_field :post_address,  placeholder:"1234567" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, :size => "50",  placeholder:"モンスターボール1-2-3" %></td>
            </tr>
            <tr>
              <td>宛名</td>
              <td><%= f.text_field :name, placeholder:"コダック" %></td>
              <td class="text-rihgt"><%= f.submit "新規登録", class:"btn btn-info" %></td>
            </tr>
          </table>
        <% end %>
      </div>
        <table class="table table-hover w-70 mt-3">
          <thead>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </thead>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td>〒<%= delivery.post_address %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
              <td>
                <%= link_to "編集する", edit_customers_delivery_path(delivery), class:"btn btn-warning" %>
                <%= link_to "削除する", customers_delivery_path(delivery), method: :delete, "data-confirm" => "本当に削除しますか?👀", class:"btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>